<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--车牌管理弹出框，可选择简称和输入车牌-->

    <data>
        <variable
            name="provinceName"
            type="androidx.databinding.ObservableField&lt;String&gt;" />

        <variable
            name="letterCode"
            type="androidx.databinding.ObservableField&lt;String&gt;" />

        <variable
            name="popup"
            type="com.wsvita.core.widget.popupwindow.PlateLicensePopupwindow" />

        <variable
            name="licenseNum"
            type="androidx.databinding.ObservableField&lt;String&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white_top_radius_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_plate_license"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_plate_license">

            <LinearLayout
                android:id="@+id/ll_plate_license"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:divider="@drawable/line_shape_width_3"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/tv_plate_province_name"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_fillet_white_gray_2"
                    android:gravity="center"
                    android:text="@{provinceName}"
                    android:onClick="@{popup.onViewClick}"/>

                <TextView
                    android:id="@+id/tv_plate_letter_code"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_border_fillet_white_gray_2"
                    android:onClick="@{popup.onViewClick}"/>

                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:text="·"
                    style="@style/AppTextTheme.Normal"/>

                <EditText
                    android:id="@+id/edit_plate_license_1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    style="@style/AppEditText"
                    android:background="@drawable/shape_border_fillet_white_gray_2"/>

                <EditText
                    android:id="@+id/edit_plate_license_2"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/AppEditText"
                    android:inputType="textEmailAddress"
                    android:textAllCaps="true"
                    android:background="@drawable/shape_border_fillet_white_gray_2"/>

                <EditText
                    android:id="@+id/edit_plate_license_3"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/AppEditText"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/shape_border_fillet_white_gray_2"/>

                <EditText
                    android:id="@+id/edit_plate_license_4"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/AppEditText"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/shape_border_fillet_white_gray_2"/>

                <EditText
                    android:id="@+id/edit_plate_license_5"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/AppEditText"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/shape_border_fillet_white_gray_2"/>

                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:text="·"
                    style="@style/AppTextTheme.Normal"/>

                <EditText
                    android:id="@+id/edit_plate_license_6"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/AppEditText"
                    android:gravity="center"
                    android:hint="@string/hint_plate_lincese_new"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/shape_border_fillet_white_gray_2"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@id/ll_plate_license"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/cl_plate_license"
            app:layout_constraintBottom_toTopOf="@id/cl_plate_license_ok"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_plate_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_plate_alphabetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_plate_license_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_plate_license_num"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/shape_plate_blue_bg"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#2E6BE5"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/dp_15"
                style="@style/AppTextTheme.Normal"
                app:layout_constraintHorizontal_weight="0.62"
                app:layout_constraintEnd_toStartOf="@id/tv_plate_lincse_ok"/>


            <TextView
                android:id="@+id/tv_plate_lincse_ok"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_plate_license_num"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.38"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/app_enter"
                android:textColor="@color/white"
                style="@style/AppTextTheme.Normal"
                android:onClick="@{popup.onViewClick}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
