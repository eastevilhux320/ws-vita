<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="recyclerItem"
            type="com.wsvita.core.entity.domain.DateTimeEntity" />
        
        <variable
            name="dateTimePresenter"
            type="com.wsvita.core.datatime.IDateTimePresenter" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{()->dateTimePresenter.onEntityClick(recyclerItem,position)}">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:coreText="@{recyclerItem.dayText}"
            style="@style/AppTextTheme.Normal"
            android:layout_margin="@dimen/dp_5"/>

    </LinearLayout>

</layout>
