<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="viewModel"
            type="com.wsvita.core.datatime.DateTimeViewModel" />

        <variable
            name="activity"
            type="com.wsvita.core.datatime.DateTimeActivity" />

        <variable
            name="dateTimeAdapter"
            type="com.wsvita.core.adapter.DateTimeAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base_bg">

        <com.wsvita.framework.widget.view.VitaTitleBar
            android:id="@+id/title_core_datetime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appTitleHeight"
            app:vita_title_text="@string/sdkcore_tilte_datetime"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/UITitle"
            android:background="@color/white"
            app:back_icon_marginLeft="@dimen/dp_10"
            app:menu_icon_marginRight="@dimen/dp_10"
            app:vita_menu_type="menu_text"
            app:vita_menu_text="@string/app_enter"
            app:vita_menu_text_color="@color/white"/>

        <TextView
            android:id="@+id/tv_sdkcore_datetime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            app:coreText="@{viewModel.currentTimeText}"
            app:layout_constraintTop_toBottomOf="@id/title_core_datetime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_25"/>

        <TextView
            android:id="@+id/tv_sdkcore_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            app:coreText="@{viewModel.currentMonthText}"
            android:layout_marginTop="@dimen/dp_2"
            app:layout_constraintTop_toBottomOf="@id/tv_sdkcore_datetime_time"
            app:layout_constraintStart_toStartOf="@id/tv_sdkcore_datetime_time" />

        <TextView
            android:id="@+id/tv_date_time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            app:coreText="@{viewModel.dateTime}"
            app:layout_constraintTop_toTopOf="@id/tv_sdkcore_datetime_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_sdkcore_datetime_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:id="@+id/tv_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_base_line"
            app:layout_constraintTop_toBottomOf="@id/tv_sdkcore_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_10"/>


        <TextView
            android:id="@+id/tv_sdkcore_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            app:coreText="@{viewModel.dateTime}"
            app:layout_constraintTop_toBottomOf="@id/tv_line_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_sdkcore_month"
            app:layout_constraintBottom_toBottomOf="@id/tv_sdkcore_month"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_month_last"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_12"
                android:src="@drawable/bg_shape_month_last"
                android:layout_marginRight="@dimen/dp_5"
                android:onClick="@{activity.onViewClick}"/>

            <ImageView
                android:id="@+id/iv_month_next"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_5"
                android:onClick="@{activity.onViewClick}"
                android:src="@drawable/bg_shape_month_next"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_sdkcore_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            app:adapter="@{dateTimeAdapter}"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.contrarywind.view.WheelView
                android:id="@+id/whell_hour"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                android:id="@+id/whell_minute"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.contrarywind.view.WheelView
                android:id="@+id/whell_second"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
