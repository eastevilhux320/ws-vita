<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="popup"
            type="com.wsvita.ui.popupwindow.MediaPickerPopupwindow" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_top_radius_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ui_media_picker_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            style="@style/AppTextTheme.Normal"
            android:text="@string/ui_media_picker_album"
            android:onClick="@{popup.onViewClick}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_50"/>

        <TextView
            android:id="@+id/tv_ui_media_picker_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            style="@style/AppTextTheme.Normal"
            android:text="@string/ui_media_picker_camera"
            android:onClick="@{popup.onViewClick}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/gray_50"/>

        <TextView
            android:id="@+id/tv_ui_media_picker_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            style="@style/AppTextTheme.Normal"
            android:text="@string/ui_cancel"
            android:onClick="@{popup.onViewClick}"/>

    </LinearLayout>

</layout>
