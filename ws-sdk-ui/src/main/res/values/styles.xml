<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- ===================================================== -->
    <!-- 基础文本样式（所有文本样式的父类） -->
    <!-- 用于统一控制应用内文本的通用行为 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme">
        <item name="android:textSize">@dimen/app_text_normal</item>
        <item name="android:textColor">@color/base_app_text</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_app_text</item>
        <item name="android:textColorHint">@color/base_text_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/app_text_normal</item>
    </style>

    <!-- ===================================================== -->
    <!-- 主标题文本 -->
    <!-- 使用场景：页面标题、模块标题、重要信息展示 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme.Title" parent="AppTextTheme">
        <item name="android:textSize">@dimen/app_text_medium</item>
        <item name="android:textColor">@color/base_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- ===================================================== -->
    <!-- 副标题文本 -->
    <!-- 使用场景：分组标题、卡片标题、次级标题 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme.Subtitle" parent="AppTextTheme">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/base_text_sub</item>
    </style>


    <!-- ===================================================== -->
    <!-- 正常正文文本 -->
    <!-- 使用场景：列表内容、正文描述、普通说明文本 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme.Normal" parent="AppTextTheme">
        <item name="android:textSize">@dimen/app_text_normal</item>
        <item name="android:textColor">@color/base_app_text</item>
    </style>


    <!-- ===================================================== -->
    <!-- 富文本 / 可点击文本 -->
    <!-- 使用场景：包含链接、富文本内容的展示 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme.Rich" parent="AppTextTheme">
        <item name="android:textSize">@dimen/app_text_normal</item>
        <item name="android:textColor">@color/base_app_text</item>
        <item name="android:textColorLink">@color/base_text_link</item>
    </style>


    <!-- ===================================================== -->
    <!-- 提示性文本 -->
    <!-- 使用场景：占位说明、辅助提示、弱化信息 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme.Hint" parent="AppTextTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/base_text_hint</item>
    </style>


    <!-- ===================================================== -->
    <!-- 错误 / 警告文本 -->
    <!-- 使用场景：表单校验错误、异常提示、风险说明 -->
    <!-- ===================================================== -->
    <style name="AppTextTheme.Error" parent="AppTextTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/base_text_error</item>
    </style>

    <style name="AppButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/app_text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/base_app_text</item>
        <item name="android:textAppearance">@style/AppTextTheme.Normal</item>
    </style>

    <style name="UITitle" parent="VitaTitleBar">
        <item name="vita_title_color">@color/base_app_text</item>
        <item name="vita_title_size">@dimen/sp_15</item>
        <item name="vita_bar_height">@dimen/appTitleHeight</item>
        <item name="vita_back_width">@dimen/dp_15</item>
        <item name="vita_back_height">@dimen/dp_15</item>
        <item name="vita_menuicon_width">@dimen/dp_15</item>
        <item name="vita_menuicon_height">@dimen/dp_15</item>
    </style>

    <style name="AppEditText.Left">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/dp_7</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BaseInput">
        <item name="wsui_labelSize">@dimen/app_text_normal</item>
        <item name="wsui_labelColor">@color/base_app_text</item>
        <item name="wsui_labelWeight">0.32</item>
        <item name="wsui_clean_width">@dimen/dp_40</item>
        <item name="wsui_clean_height">@dimen/dp_40</item>
        <item name="wsui_clean_unable">true</item>
        <item name="wsui_clean_marginEnd">@dimen/dp_5</item>
        <item name="wsui_clean_padding">@dimen/dp_10</item>
        <item name="wsui_showDivider">false</item>
    </style>

    <style name="BaseMete">
        <item name="wsui_labelColor">@color/base_app_text</item>
        <item name="wsui_labelSize">@dimen/app_text_normal</item>
        <item name="wsui_lableMarginLeft">15dp</item>
        <item name="wsui_action_color">@color/base_app_text</item>
        <item name="wsui_action_size">@dimen/app_text_normal</item>
        <item name="wsui_actionMarginRight">@dimen/dp_7</item>
        <item name="wsui_showArrow">true</item>
        <item name="wsui_arrow_width">@dimen/dp_12</item>
        <item name="wsui_arrow_height">@dimen/dp_12</item>
        <item name="wsui_arrowMarginRight">@dimen/dp_15</item>
        <item name="wsui_showDivider">true</item>
        <item name="wsui_arrow_src">@drawable/wsui_ic_va_arrow_gray</item>
    </style>

    <style name="BaseInput.Suffix">
        <item name="wsui_suffixColor">@color/base_app_text</item>
        <item name="wsui_suffixSize">@dimen/app_text_normal</item>
        <item name="wsui_clean_unable">false</item>
        <item name="wsui_suffixMarginRight">@dimen/dp_15</item>
    </style>

    <style name="WsuiDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/color_base_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerThickness">1dp</item>
        <item name="dividerInsetStart">0dp</item>
        <item name="dividerInsetEnd">0dp</item>
    </style>

</resources>
