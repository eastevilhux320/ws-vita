<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vita.xuantong.demo.model.main.mine.MineViewModel" />

        <variable
            name="fragment"
            type="com.vita.xuantong.demo.model.main.mine.MineFragment" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/AppFragment_CollapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.8">

                    <ImageView
                        android:id="@+id/iv_account_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_160"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:scaleType="fitXY"
                        app:appSrc="@{viewModel.account.getHeaderBackgroundIcon()}"/>

                    <ImageView
                        android:id="@+id/iv_mine_account_icon"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@{viewModel.account.getHeaderIcon()}"
                        app:layout_constraintTop_toTopOf="@id/iv_account_header"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:onClick="@{fragment.onViewClick}"/>

                    <TextView
                        android:id="@+id/tv_account_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTextTheme.Normal"
                        android:text="@{viewModel.account.getNickname()}"
                        app:layout_constraintTop_toTopOf="@id/iv_mine_account_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_mine_account_icon"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/tv_account_userno"
                        android:onClick="@{fragment.onViewClick}"/>

                    <TextView
                        android:id="@+id/tv_account_userno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AppTextTheme.Normal"
                        android:text="@{viewModel.account.getUserNoText()}"
                        app:layout_constraintTop_toBottomOf="@id/tv_account_nickname"
                        app:layout_constraintBottom_toBottomOf="@id/iv_mine_account_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_mine_account_icon"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:textColor="@color/white"
                        android:onClick="@{fragment.onViewClick}"/>


                    <ImageView
                        android:id="@+id/iv_mine_account_arrow"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/wsui_ic_va_arrow_white"
                        app:layout_constraintTop_toTopOf="@id/iv_mine_account_icon"
                        app:layout_constraintBottom_toBottomOf="@id/iv_mine_account_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:onClick="@{fragment.onViewClick}"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_vip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:background="@color/color_main_theme"
                    app:layout_collapseMode="pin"
                    android:paddingTop="@dimen/dp_32">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_mine_account_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="@{viewModel.account.getNickname()}"
                            android:onClick="@{fragment.onViewClick}"/>


                        <ImageView
                            android:id="@+id/iv_mine_setting"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:padding="@dimen/dp_5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_mine_msg"
                            android:layout_marginRight="@dimen/dp_8"
                            android:onClick="@{fragment.onViewClick}"/>

                        <ImageView
                            android:id="@+id/iv_mine_msg"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:padding="@dimen/dp_5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="@dimen/dp_10" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/color_app_bg">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:gravity="center_vertical">


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
