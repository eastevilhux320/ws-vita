<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.wsvita.biz.core.model.region.citylist.CityListViewModel" />

        <variable
            name="fragment"
            type="com.wsvita.biz.core.model.region.citylist.CityListFragment" />

        <variable
            name="provinceAdapter"
            type="com.wsvita.core.common.adapter.CoreAdapter" />

        <variable
            name="hotCityAdapter"
            type="com.wsvita.biz.core.adapter.HotCityAdapter" />

        <variable
            name="cityAdapter"
            type="com.wsvita.biz.core.adapter.RegionCityAdapter" />

        <variable
            name="districtAdapter"
            type="com.wsvita.biz.core.adapter.RegionDistrictAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base_bg"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_city_province"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:adapter="@{provinceAdapter}"/>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bizcore_hot_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bizcore_city_hot"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                style="@style/AppTextTheme.Title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bizcore_hot_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:adapter="@{hotCityAdapter}"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_bizcore_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:bizText="@{viewModel.province.name}"
                    style="@style/AppTextTheme.Title"
                    android:layout_marginTop="@dimen/dp_5"
                    android:onClick="@{fragment.onViewClick}"/>

                <TextView
                    android:id="@+id/tv_bizcore_province_line"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_bizcore_province"
                    app:layout_constraintEnd_toEndOf="@id/tv_bizcore_province"
                    android:onClick="@{fragment.onViewClick}"/>

                <TextView
                    android:id="@+id/tv_bizcore_city_selected_line"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_bizcore_province"/>


                <TextView
                    android:id="@+id/tv_bizcore_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_bizcore_city_selected_line"
                    app:bizText="@{viewModel.city.name}"
                    style="@style/AppTextTheme.Title"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:onClick="@{fragment.onViewClick}"/>

                <TextView
                    android:id="@+id/tv_bizcore_city_line"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_bizcore_city"
                    app:layout_constraintEnd_toEndOf="@id/tv_bizcore_city"
                    android:onClick="@{fragment.onViewClick}"/>


                <TextView
                    android:id="@+id/tv_bizcore_district_selected_line"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_bizcore_city"/>

                <TextView
                    android:id="@+id/tv_bizcore_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_bizcore_district_selected_line"
                    app:bizText="@{viewModel.district.name}"
                    style="@style/AppTextTheme.Title"
                    android:layout_marginLeft="@dimen/dp_5"/>

                <TextView
                    android:id="@+id/tv_bizcore_district_line"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_bizcore_district"
                    app:layout_constraintEnd_toEndOf="@id/tv_bizcore_district"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bicore_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adapter="@{cityAdapter}"
                android:visibility="@{viewModel.showType == 1}"
                android:layout_marginTop="@dimen/dp_10"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bicore_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adapter="@{districtAdapter}"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="@{viewModel.showType == 2}"/>

        </LinearLayout>
        
    </LinearLayout>

</layout>
