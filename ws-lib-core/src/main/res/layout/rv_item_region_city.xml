<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="recyclerItem"
            type="com.wsvita.biz.core.entity.region.CityEntity" />

        <variable
            name="cityPresenter"
            type="com.wsvita.biz.core.presenter.IRegionPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/shape_border_gray_3"
        android:onClick="@{()->cityPresenter.onRegionCityClick(recyclerItem)}">

        <TextView
            android:id="@+id/tv_bizcore_hot_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            app:bizText="@{recyclerItem.name}"/>

    </LinearLayout>

</layout>
