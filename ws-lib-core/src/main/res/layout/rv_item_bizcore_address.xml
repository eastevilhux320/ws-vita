<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="address"
            type="com.wsvita.biz.core.entity.region.AddressEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_bizcore_address_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            android:text="@{address.province}"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/dp_2"
            app:layout_constraintBottom_toTopOf="@id/tv_bizcore_address_detail"/>

        <TextView
            android:id="@+id/tv_bizcore_address_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            android:text="@{address.city}"
            app:layout_constraintTop_toTopOf="@id/tv_bizcore_address_province"
            app:layout_constraintBottom_toBottomOf="@id/tv_bizcore_address_province"
            app:layout_constraintStart_toEndOf="@id/tv_bizcore_address_province"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_bizcore_address_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            android:text="@{address.district}"
            app:layout_constraintTop_toTopOf="@id/tv_bizcore_address_city"
            app:layout_constraintBottom_toBottomOf="@id/tv_bizcore_address_city"
            app:layout_constraintStart_toEndOf="@id/tv_bizcore_address_city"
            android:layout_marginLeft="@dimen/dp_10"/>


        <TextView
            android:id="@+id/tv_bizcore_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bizcore_address_province"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@{address.addressDetail}"
            android:layout_marginBottom="@dimen/dp_15"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
