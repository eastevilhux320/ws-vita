<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.wsvita.account.model.login.main.MainViewModel" />

        <variable
            name="fragment"
            type="com.wsvita.account.model.login.main.MainFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ac_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ac_bg_login_default">

        <ImageView
            android:id="@+id/iv_ac_login_main_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_ws_base_back"
            android:padding="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{fragment.onViewClick}"/>

        <TextView
            android:id="@+id/tv_ac_login_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_ac_login_main_back"
            app:layout_constraintBottom_toBottomOf="@id/iv_ac_login_main_back"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/AppTextTheme.Title"
            android:textColor="@color/white"
            android:text="@string/account_title_ac_login_main" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_login_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_80"
            app:layout_constraintTop_toBottomOf="@id/tv_ac_login_main_title">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_account_app_logo"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/dp_30"
                app:round="@dimen/dp_8"
                app:acSrc="@{viewModel.config.appLogo}"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/iv_account_app_logo"
                app:layout_constraintBottom_toBottomOf="@id/iv_account_app_logo"
                app:layout_constraintStart_toEndOf="@id/iv_account_app_logo">

                <TextView
                    android:id="@+id/tv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTextTheme.Normal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/sp_28"
                    android:textColor="@color/white"
                    app:acText="@{viewModel.config.appName}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_app_desc" />


                <TextView
                    android:id="@+id/tv_app_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_app_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/AppTextTheme.Hint"
                    android:textColor="@color/white"
                    app:acText="@{viewModel.config.appSlogan}"
                    android:layout_marginBottom="@dimen/dp_5" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/ll_login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_login_app"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_account_login_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">

                <TextView
                    android:id="@+id/account_tv_username"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    style="@style/AppTextTheme.Normal"
                    android:text="@string/account_login_username"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/account_edit_username"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    style="@style/AppEditText.Left"
                    android:hint="@string/account_hint_account_login_username"
                    app:layout_constraintTop_toTopOf="@id/account_tv_username"
                    app:layout_constraintBottom_toBottomOf="@id/account_tv_username"
                    app:layout_constraintStart_toEndOf="@id/account_tv_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/account_tv_login_username_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_account_login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">

                <TextView
                    android:id="@+id/account_tv_password"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    style="@style/AppTextTheme.Normal"
                    android:text="@string/account_login_password"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/account_edit_password"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    style="@style/AppEditText.Left"
                    android:hint="@string/account_hint_account_login_password"
                    app:layout_constraintTop_toTopOf="@id/account_tv_password"
                    app:layout_constraintBottom_toBottomOf="@id/account_tv_password"
                    app:layout_constraintStart_toEndOf="@id/account_tv_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:textColorHint="@color/white"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/account_tv_login_password_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"/>

            <TextView
                android:id="@+id/tv_ac_login_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/account_enter_login_username"
                style="@style/AppTextTheme.Normal"
                android:textColor="@color/white"
                android:onClick="@{fragment.onViewClick}"
                android:background="@drawable/shape_fillet_white_25"/>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_login_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:onClick="@{fragment.onViewClick}"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toTopOf="@id/cl_ac_login_phone"
            android:background="@drawable/shape_fillet_white_25">

            <ImageView
                android:id="@+id/iv_login_wechat"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/ic_ui_wechat_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_login_wechat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/account_ac_login_wechat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/AppTextTheme.Normal"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintHorizontal_chainStyle="packed"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ac_login_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@id/iv_ac_login_agreement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/dp_20"
            android:onClick="@{fragment.onViewClick}"
            android:background="@drawable/shape_border_white_25">

            <ImageView
                android:id="@+id/iv_login_phone"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/ic_ui_phone_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_login_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/account_login_phone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/AppTextTheme.Normal"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/white"
                app:layout_constraintHorizontal_chainStyle="packed"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_ac_login_agreement"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:onClick="@{fragment.onViewClick}"/>

        <TextView
            android:id="@+id/tv_login_agreement_tips"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            style="@style/AppTextTheme.Normal"
            app:layout_constraintTop_toTopOf="@id/iv_ac_login_agreement"
            app:layout_constraintBottom_toBottomOf="@id/iv_ac_login_agreement"
            app:layout_constraintStart_toEndOf="@id/iv_ac_login_agreement"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:onClick="@{fragment.onViewClick}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
